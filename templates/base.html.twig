{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Mon Projet Symfony{% endblock %}</title>
</head>
<body>
    <header>
        <h1>Mon Projet Symfony</h1>
        <nav>
            <ul>
                <li><a href="{{ path('home') }}">Accueil</a></li>
                <li><a href="{{ path('about') }}">À propos</a></li>
            </ul>
        </nav>
    </header>

    <main>
        {% block content %}{% endblock %}
    </main>

    <footer>
        <p>© {{ "now"|date("Y") }}</p>
    </footer>
</body>
</html>